# =============================================================================
# SmartCafe - Environment Variables
# =============================================================================
# Copy this file to .env and adjust the values for your environment

# =============================================================================
# Database
# =============================================================================
POSTGRES_DB=smartcafe
POSTGRES_USER=smartcafe_user
POSTGRES_PASSWORD=your_secure_password_here

# =============================================================================
# API Configuration
# =============================================================================
APP_ENV=prod
APP_SECRET=your_app_secret_here
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@database:5432/${POSTGRES_DB}?serverVersion=16&charset=utf8

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_PASSPHRASE=your_jwt_passphrase_here

# =============================================================================
# Frontend Configuration
# =============================================================================
VITE_API_URL=/api
